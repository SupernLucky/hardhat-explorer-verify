{
  "name": "@okx/hardhat-oklint",
  "version": "1.0.0",
  "description": "Hardhat plugin for verifying contracts on OKExChain",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "type": "commonjs",
  "keywords": [],
  "author": "OKX",
  "license": "ISC",
  "files": [
    "dist/src/",
    "src/",
    "*.d.ts",
    "*.d.ts.map",
    "*.js",
    "*.js.map",
    "README.md"
  ],
  "scripts": {
    "postinstall": "npm run build:prod",
    "prepare": "husky install",
    "test": "mocha",
    "test:watch": "mocha --watch --clean-cache",
    "start": "node --import tsx dist/main.js",
    "pub:beta": "npm version prerelease --preid=beta",
    "pub:patch": "npm version patch",
    "rm": "rimraf dist",
    "build": "swc src -d dist --source-maps -D --strip-leading-paths",
    "build:type": "tsc --emitDeclarationOnly",
    "build:prod": "npm run rm && npm run build:type && npm run build",
    "lint": "eslint --config .eslintrc . --cache --debug",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.{ts,js,md,json}\""
  },
  "dependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.4.14",
    "@ethersproject/abi": "^5.1.2",
    "@ethersproject/address": "^5.0.2",
    "cbor": "^8.1.0",
    "chalk": "^2.4.2",
    "debug": "^4.1.1",
    "fs-extra": "^7.0.1",
    "lodash": "^4.17.11",
    "semver": "^6.3.0",
    "table": "^6.8.0",
    "undici": "^5.14.0",
    "tsx": "^4.7.2"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@types/chai": "^4.2.0",
    "@types/fs-extra": "^5.1.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": "^14.0.0",
    "@types/semver": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "chai": "^4.2.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.1",
    "eslint-plugin-no-only-tests": "3.0.0",
    "eslint-plugin-prettier": "3.4.0",
    "ethers": "^5.0.8",
    "hardhat": "^2.0.4",
    "mocha": "^10.0.0",
    "prettier": "2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.0",
    "typescript": "~4.7.4"
  },
  "peerDependencies": {
    "hardhat": "^2.0.4"
  }
}
