{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "checkJs": true,
    "strict": true,
    "rootDirs": [
      "./src",
      "./test"
    ],
    "baseUrl": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "declarationDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "./src",
    "./test"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist",
    "**/*.spec.ts"
  ]
}